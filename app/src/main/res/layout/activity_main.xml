<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="1+1+1+1"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn01"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtView"
        android:layout_marginStart="50dp"/>

    <Button
        android:id="@+id/btn02"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="1"
        app:layout_constraintStart_toEndOf="@id/btn01"
        app:layout_constraintTop_toBottomOf="@id/txtView"/>

    <Button
        android:id="@+id/btn03"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/btn02"
        app:layout_constraintTop_toBottomOf="@id/txtView"/>

    <Button
        android:id="@+id/btn04"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="+/-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn01"/>

    <Button
        android:id="@+id/btn05"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@id/btn04"
        app:layout_constraintTop_toBottomOf="@id/btn02"/>

    <Button
        android:id="@+id/btn06"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@id/btn05"
        app:layout_constraintTop_toBottomOf="@id/btn03"/>

    <Button
        android:id="@+id/btn07"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn04"/>

    <Button
        android:id="@+id/btn08"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/btn07"
        app:layout_constraintTop_toBottomOf="@id/btn05"/>

    <Button
        android:id="@+id/btn09"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/btn08"
        app:layout_constraintTop_toBottomOf="@id/btn06"/>

    <Button
        android:id="@+id/btn10"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="xy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn07"/>

    <Button
        android:id="@+id/btn11"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="7"
        app:layout_constraintStart_toEndOf="@id/btn10"
        app:layout_constraintTop_toBottomOf="@id/btn08"/>

    <Button
        android:id="@+id/btn12"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@id/btn11"
        app:layout_constraintTop_toBottomOf="@id/btn09"/>

    <Button
        android:id="@+id/btn13"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn10"/>

    <Button
        android:id="@+id/btn14"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/btn13"
        app:layout_constraintTop_toBottomOf="@id/btn11"/>

    <Button
        android:id="@+id/btn15"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@id/btn14"
        app:layout_constraintTop_toBottomOf="@id/btn11"/>

    <Button
        android:id="@+id/btn16"
        android:layout_width="68dp"
        android:layout_height="101dp"
        android:layout_margin="5dp"
        android:text="r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn13"/>

    <Button
        android:id="@+id/btn17"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="("
        app:layout_constraintStart_toEndOf="@id/btn16"
        app:layout_constraintTop_toBottomOf="@id/btn14"/>

    <Button
        android:id="@+id/btn18"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text=")"
        app:layout_constraintStart_toEndOf="@id/btn17"
        app:layout_constraintTop_toBottomOf="@id/btn15"/>

    <Button
        android:id="@+id/btn19"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/btn16"
        app:layout_constraintTop_toBottomOf="@+id/btn17"/>

    <Button
        android:id="@+id/btn20"
        android:layout_width="68dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@id/btn19"
        app:layout_constraintTop_toBottomOf="@id/btn18"/>

</androidx.constraintlayout.widget.ConstraintLayout>